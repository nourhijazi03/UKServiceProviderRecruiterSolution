@model IEnumerable<UKServiceProviderRecruiter.CandidateInvoice>

@{
    ViewBag.Title = "Index";
}

<style>

    .fa {
        display: inline-block;
        font: normal normal normal 14px/1.5 FontAwesome !important;
        font-size: inherit;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>

<br />

<div class="box box-primary">

    <div class="box-header with-border">
        <h3 class="box-title"><i class="fa fa-list-alt"></i> <span>Candidate Invoice List</span></h3>
        <div class="box-tools pull-right">
        </div>

    </div>



    @using (Html.BeginForm())
    {
        <div class="text-left">
            @Html.ActionLink("Create New", "Create")

            @*<button type="submit" id="btn-export-excel" class="btn btn-success btn-sm">Export To Excel</button>*@

        </div>

        <div class="box-body no-padding">

            <div class="mailbox-controls">
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <table id="demoGrid_info" class="table table-striped table-bordered dt-responsive " width="100%" cellspacing="0">

                        <thead>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.InvoiceNum)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CCID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.InvoiceDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TotalAmount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PaymentMethod)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Summary)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Candidate.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HotelRequest.HoursNeeded)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Hotel.Name)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InvoiceNum)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CCID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InvoiceDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalAmount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PaymentMethod)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Summary)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Candidate.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HotelRequest.HoursNeeded)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Hotel.Name)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.InvoiceID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.InvoiceID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.InvoiceID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<div class="box-footer no-padding">

</div>
<script type="text/javascript">



    $('#demoGrid_info').DataTable({
        "paging": true,
        "pageLength": 10,
        "pagingType": "full_numbers",
        "scrollX": true,

    });
</script>




