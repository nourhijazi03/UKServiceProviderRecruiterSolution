@model IEnumerable<UKServiceProviderRecruiter.HotelRequest>

@{
    ViewBag.Title = "Index";
}

<h2 class="box-title"><i class="fa fa-list-alt"></i><span>Hotel Requests</span></h2>



<p>
    @Html.ActionLink("Create Request", "Create",null, new{ @class="btn bg-aqua"})
</p>
<div class="mailbox-attachment-info">
    <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
        <table id="demoGrid" class="table table-striped table-bordered dt-responsive " width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        Number Of Candidates
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HoursNeeded)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequestDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Speciality)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hotel.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfCandidates)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoursNeeded)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Speciality)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hotel.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.HotelRequestID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.HotelRequestID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.HotelRequestID })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        </div>
    </div>

<script type="text/javascript">



    $('#demoGrid').DataTable({
        "paging": true,
        "pageLength": 10,
        "pagingType": "full_numbers",
        "scrollX": true,



    });
</script>